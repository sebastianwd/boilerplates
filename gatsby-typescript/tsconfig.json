{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["es2017", "esnext.asynciterable", "dom"], 
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ES6",
    "paths": {
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@images/*": ["src/images/*"],
      "@images": ["src/images"],
      "@layouts": ["src/layouts/index"],
      "@layouts/*": ["src/layouts/*"],
      "@pages": ["src/pages"],
      "@hooks": ["src/hooks"],
      "@context": ["src/context"],
      "@theme": ["src/theme"],
      "@theme/*": ["src/theme/*"],
      "@generated/*": ["src/__generated__/*"],
      "@utils": ["src/utils"],
      "@screens": ["src/screens"]
    }
  },
  "include": [
    "./gatsby-node.js",
    "apollo.config.js",
    ".eslintrc.js",
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "*.js",
    "apollo.config.js",
    "graphql-types.ts",
    "public"
  ]
}
